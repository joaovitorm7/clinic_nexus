{
  "name": "clinic-nexus-desktop",
  "version": "1.0.0",
  "description": "Aplicação desktop do Clinic Nexus",
  "main": "electron/main.js",
  "private": true,
  "author": "Marcus",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npm run build:frontend && concurrently \"npm run start:backend\" \"npm run start:electron\"",
    "start:backend": "cd backend && npm run start:prod",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:electron": "electron electron/main.js",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^29.0.0",
    "electron-builder": "^25.1.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.clinicnexus.desktop",
    "productName": "Clinic Nexus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/",
      "frontend/build/",
      "backend/"
    ]
  }
}

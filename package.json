{
  "name": "clinic-nexus-desktop",
  "version": "1.0.0",
  "description": "Aplicação desktop do Clinic Nexus",
  "main": "electron/main.js",
  "private": true,
  "author": "Marcus",
  "license": "UNLICENSED",
  "scripts": {
    "dev:electron": "npm run build:frontend && concurrently \"npm run start:backend\" \"npm run start:electron\"",
    "start:backend": "cd backend && npm start run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm run dev",
    "start:electron": "electron electron/main.js",
    "dist": "electron-builder",
    "dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "concurrently": "^9.2.1",
    "electron": "^39.1.2",
    "electron-builder": "^25.1.0",
    "jsdom": "^27.2.0",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.clinicnexus.desktop",
    "productName": "Clinic Nexus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/",
      "frontend/build/",
      "backend/"
    ]
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
